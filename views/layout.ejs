<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=.8, maximum-scale=1">
	<title>Artist Portfolios</title>
	<script type="text/javascript" src="/js/jquery.min.js"></script>
	<script type="text/javascript" src="/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="/js/artistPortfolio.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/artistportfolio.css">
</head>

<body>
	<div id="nav">
		<div class="col-sm nav-align">
			<h1 id="title">Artist Portfolios</h1>
		</div>
		<div class="col-sm nav-align">
			<a href="/">
				<span class="button">Home</span>
			</a>
			<a href="/artists">
				<span class="button">Artists</span>
			</a>
			<a href="/galleries">
				<span class="button">Galleries</span>
			</a>
			<% if (loggedIn) { %>
				<%- include('galleries/_galleriesModal') %>.
			<% } %>

		<div class="login">
			<% if (loggedIn) { %>
				<p>Logged in 
				<span class="log-out">
					<a href="/artists/logout">Log out</a>
				</span>
				</p>
			<%} else {%>
				<a href="/artists/login">Log In</a>
			<% } %>
		</div>
		<% if (!loggedIn) { %>
		<div class="create">
			<a href="/artists/new">Create User</a>
		  </div>
		  <% } %>
	</div>
	<div class="flashes">
		<% if (flashMessages) { %>
			<% if (flashMessages.success) { %>
				<div class="flash success"><%= flashMessages.success %></div>
			<% } else if (flashMessages.error) { %>
				<div class="flash error"><%= flashMessages.error %></div>
			<% } %>
		<% } %>
		</div>

	<div class="container">
		<%- body %>
	</div>

</body>

</html>